{
  "name": "color-description",
  "version": "0.6.0",
  "description": "Textual color description",
  "main": "dist/index.node.js",
  "browser": "dist/index.nomodule.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:nomodule && npm run build:browser && npm run build:node",
    "build:nomodule": "esbuild src/ui.js --bundle --target=es6 --outfile=dist/index.nomodule.js",
    "build:browser": "esbuild src/ui.js --bundle --outfile=dist/index.browser.js",
    "build:node": "esbuild src/ui.js --platform=node --outfile=dist/index.node.js --target=node14",
    "test": "npm run build && node --experimental-vm-modules ./node_modules/jest/bin/jest",
    "dev": "live-server ./dist --entry-file=dist/index.html --watch=./dist/index.nomodule.js,dist/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/words/color-description.git"
  },
  "keywords": [
    "color",
    "text",
    "colour"
  ],
  "author": "meodai@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/words/color-description/issues"
  },
  "homepage": "https://github.com/words/color-description#readme",
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "chroma-js": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "esbuild": "^0.12.25",
    "git-cz": "^4.7.6",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "prettier": "^2.3.2"
  }
}
